#include <stdlib.h>
#include <stdio.h>
#include <iostream>
#include <vector>
#include <algorithm>
typedef struct triplet{
	int r, key, k;
}triplet;

int max_value(int r, int uncloseableRoom, int k, std::vector<std::vector<int> > rooms, int * memory){
	if((unsigned)r == rooms.size()){
		return 0;
	}
	if(k == ((signed int)rooms.size()) - r){
		switch(uncloseableRoom){
		case -1:{
			int x = rooms[r][0] + max_value(r+1,0,k-1,rooms);
			int y = rooms[r][1] + max_value(r+1,1,k-1,rooms);
			return std::max(x,y);
			break;
		}
		case 0:{
			return rooms.at(r)[0] + max_value(r+1,0,k-1, rooms);
			break;
		}
		case 1:{
			return rooms.at(r)[1] + max_value(r+1,1,k-1,rooms);
			break;
		}
		default:{
			return 0;
			break;
		}
		}
	}
	switch(uncloseableRoom){
	case -1 :{
		int x = rooms[r][0] + max_value(r+1,0,k-1,rooms);
		int y = rooms[r][1] + max_value(r+1,1,k-1,rooms);
		int z = rooms[r][1] + rooms[r][0] + max_value(r+1,-1,k,rooms);
		int max = std::max(x,y);
		return std::max(max,z);
		break;
	}
	case 0 :{
		int x = rooms[r][0] + max_value(r+1, 0,k-1,rooms);
		int y = rooms[r][0] + rooms[r][1] + max_value(r+1,-1,k,rooms);
		return std::max(x,y);
		break;
	}
	case 1 :{
		int x = rooms[r][1] + max_value(r+1,1,k-1,rooms);
		int y = rooms[r][1] + rooms.at(r)[0] + max_value(r+1,-1,k,rooms);
		return std::max(x,y);
		break;
	}
	default:{
		return 0;
		break;
	}
	}
	return 0;
}
void function_call2(std::vector<std::vector<int> > rooms, int N, int K){
	int memory[rooms.size()];
	int result = max_value(0,-1,K,rooms,memory);
	std::cout<< result << std::endl;
}

int main(int argc, char** arv){
	while(1){
		int N, K;
		scanf("%d %d",&N,&K);
		if((N == 0)&&(K==0)){
			break;
		}
		std::vector<std::vector <int> > rooms(N);
		//int rooms[N][2];
		for(int i = 0; i < N; i ++){
			int x,y;
			scanf("%d %d", &x,&y);
			rooms.at(i).push_back(x);
			rooms.at(i).push_back(y);
		}
		function_call2(rooms,N,K);
	}
	return 0;
}


